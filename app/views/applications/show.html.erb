<h1>Application Details</h1>

<p>Name: <%= @application.name %></p>
<p>Address: <%= @application.address %></p>
<p>City: <%= @application.city %></p>
<p>State: <%= @application.state %></p>
<p>Zip: <%= @application.zip %></p>
<p>Description: <%= @application.description %></p>
<p>Phone Number: <%= @application.phone_number %></p>

<p>Pets:
<% @application.pets.each do |pet| %>
<section id="pet-<%= pet.id %>">
  <li> <%= link_to "#{pet.name}", "/pets/#{pet.id}" %>
    <%= button_to "Approve Pet", "/pets/#{pet.id}/applications/#{@application.id}" %> <!--   @approve_applications_path-->
    <%= check_box_tag "pet_ids[]", pet.id %>
    <%= label_tag pet.name %>
  </li>
  <%= button_to "Approve All Checked Pets",  "/pets/#{pet.id}/applications/#{@application.id}"%>
</section>
<% end %>
</p>
