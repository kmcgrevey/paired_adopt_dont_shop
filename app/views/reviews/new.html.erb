<%= form_tag("/shelters/#{@shelter.id}/reviews", method: :post) do %>
  <p><%= label_tag :title %>
     <%= text_field_tag :title %></p>
  <p><%= label_tag :rating %>
     <%= text_field_tag :rating %></p>
  <p><%= label_tag :content %>
     <%= text_field_tag :content %></p>
  <p><%= label_tag :image %>
    <%= text_field_tag :image_src %>(optional)</p>
<%= submit_tag "Submit"%>
<% end %>
