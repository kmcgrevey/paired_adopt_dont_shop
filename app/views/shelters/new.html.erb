<h3>New Shelter Information</h3>
<%= form_tag("/shelters", method: :post) do %>
  <p><%= label_tag :shelter_name %>
     <%= text_field_tag :name %>(required)</p>
  <p><%= label_tag :address %>
     <%= text_field_tag :address %></p>
  <p><%= label_tag :city %>
     <%= text_field_tag :city %></p>
  <p><%= label_tag :state %>
    <%= text_field_tag :state %></p>
    <p><%= label_tag :zip %>
      <%= text_field_tag :zip %></p>
<%= submit_tag "Submit"%>
<% end %>

